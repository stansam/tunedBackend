# Environment variables for tunedBundle backend
# Copy this to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Database Configuration
# Development (SQLite)
SQLALCHEMY_DATABASE_URI=sqlite:///app.db

# Production (PostgreSQL)
# SQLALCHEMY_DATABASE_URI=postgresql://user:password@localhost:5432/tunedessays
# DB_USER=tunedop
# DB_PASSWORD=your_password_here
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=tunedessays

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# SocketIO (for multi-server deployments)
SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/3

# Email Configuration (Hostinger SMTP)
EMAIL_HOST=smtp.hostinger.com
EMAIL_PORT=465
EMAIL_USE_TLS=False
EMAIL_USE_SSL=True
MAIL_USERNAME=your_email@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=info@tunedessays.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Optional: API Key for internal endpoints
API_KEY=your-api-key-here
